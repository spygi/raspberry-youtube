{
  "manifest_version": 2,

  "name": "YouTube to Raspberry",
  "short_name": "YouTube<->Pi",
  "description": "Send YouTube videos to RaspberryPi for playback.",
  "version": "0.1",

  "permissions": [
      "tabs",
      "background",
      "http://*/"
  ],
  "background": {
    "scripts": ["bootstrap.js"],
    "persistent": true
  },
  "page_action": {
    "default_icon": "assets/img/logo.png"
  }
}
